{
  "compilerOptions": {
    /* Proyectos */
    // Configuraciones opcionales

    /* Lenguaje y Entorno */
    "target": "ESNext", // JavaScript moderno (ES2022)
    "module": "ESNext", // ES Modules
    "outDir": "./build", // Salida de los archivos compilados

    /* Módulos */
    "moduleResolution": "node", // Node.js para resolución de módulos
    "esModuleInterop": true, // Facilita la interoperabilidad entre ES y CommonJS

    /* Strict Mode */
    "strict": true, // Habilitar todas las verificaciones estrictas
    "noUnusedLocals": false, // Detectar variables locales no usadas
    "noUnusedParameters": false, // Detectar parámetros no usados
    "noImplicitReturns": false, // Detectar rutas sin retornos implícitos
    "noFallthroughCasesInSwitch": true, // Detectar errores en switch

    /* Alias para rutas */
    "paths": {
      "@/*": ["./*"] // Alias para que importes con @
    },

    /* Otros */
    "skipLibCheck": true // Omitir verificación de archivos de declaración
  },
  "include": ["src/**/*.ts", "src/server.ts", "@types/**/*"], // Incluir todos los archivos TypeScript en src
  "exclude": ["node_modules", "build", "api"] // Excluir node_modules, build y api
}
